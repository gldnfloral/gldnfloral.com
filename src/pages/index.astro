---
import GalleryGrid from "../components/GalleryGrid.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { galleryEntries } from "../lib/gallery";

const featuredItems = galleryEntries.slice(0, 3);
---

<BaseLayout
  title="Seasonal Floral Design"
  description="Seasonal floral design with a focus on texture, movement, and natural color palettes."
  path={Astro.url.pathname}
>
  <section class="section">
    <div class="container">
      <p class="eyebrow">GLDN Floral</p>
      <h1 class="page-title">Seasonal Floral Design for Thoughtful Celebrations</h1>
      <p class="page-intro">
        A boutique floral studio creating organic arrangements with painterly color, soft structure,
        and a refined editorial feel.
      </p>
    </div>
  </section>

  <section class="section featured-gallery">
    <div class="container">
      <div class="section-header">
        <h2>Featured Gallery</h2>
      </div>
      <GalleryGrid items={featuredItems} />
    </div>
  </section>
</BaseLayout>

<style>
  .section-header {
    align-items: baseline;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    justify-content: space-between;
    margin-bottom: var(--space-5);
  }

  h2 {
    font-size: clamp(1.9rem, 4vw, 3.2rem);
  }

  .featured-gallery {
    padding-top: var(--space-4);
  }
</style>
