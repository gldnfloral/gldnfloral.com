---
import type { ServicePillar } from "../../lib/home";

interface Props {
  items: readonly ServicePillar[];
}

const { items } = Astro.props;
---

<section class="section services-section">
  <div class="container">
    <header class="services-header">
      <p class="eyebrow">Services</p>
      <h2>Designed for Events, Hospitality, and Everyday Luxury</h2>
      <p>
        Core offerings are intentionally modular so this site can grow with packages, seasonal menus,
        and booking workflows later.
      </p>
    </header>

    <div class="services-grid">
      {
        items.map((item) => (
          <article class="service-card">
            <p class="service-label">{item.label}</p>
            <p class="service-description">{item.description}</p>
            <ul>
              {item.notes.map((note) => <li>{note}</li>)}
            </ul>
            <a href={item.href}>Learn More</a>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .services-section {
    padding-top: var(--space-5);
  }

  .services-header {
    display: grid;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
    max-width: 62ch;
  }

  .services-header h2 {
    font-size: clamp(2rem, 4.3vw, 3.4rem);
  }

  .services-header p {
    color: var(--color-muted);
  }

  .services-grid {
    display: grid;
    gap: var(--space-4);
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }

  .service-card {
    background: linear-gradient(
      180deg,
      color-mix(in srgb, var(--color-cornsilk) 85%, white 15%),
      color-mix(in srgb, var(--color-soft-blush) 45%, white 55%)
    );
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    display: grid;
    gap: var(--space-3);
    padding: var(--space-5);
  }

  .service-label {
    color: var(--color-heading);
    font-family: var(--font-display);
    font-size: 1.9rem;
    line-height: 1.1;
  }

  .service-description {
    color: var(--color-muted);
  }

  ul {
    display: grid;
    gap: var(--space-2);
    margin: 0;
    padding-left: 1.2rem;
  }

  li {
    font-size: 0.98rem;
  }

  a {
    color: var(--color-heading);
    font-weight: 600;
    text-decoration-thickness: 1px;
    text-underline-offset: 0.2rem;
    width: fit-content;
  }

  @media (max-width: 72rem) {
    .services-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 48rem) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
