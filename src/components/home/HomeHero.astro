---
import { Image } from "astro:assets";

import type { GalleryEntry } from "../../lib/gallery";
import { siteConfig } from "../../lib/site";

interface Props {
  heroImage: GalleryEntry;
}

const { heroImage } = Astro.props;
---

<section class="section hero-section">
  <div class="container hero-grid">
    <div class="hero-copy">
      <p class="eyebrow">{siteConfig.location}</p>
      <h1 class="hero-title">Flowers with Warmth, Structure, and Story</h1>
      <p class="hero-intro">
        GLDN Floral creates artful arrangements for weddings, events, and intimate gatherings with
        seasonal stems, thoughtful color, and natural movement.
      </p>

      <div class="hero-actions" aria-label="Primary actions">
        <a class="hero-link hero-link-primary" href="/gallery">Browse Gallery</a>
        <a class="hero-link" href="/contact">Start an Inquiry</a>
      </div>
    </div>

    <figure class="hero-image">
      <Image
        src={heroImage.image}
        alt={heroImage.alt}
        widths={[540, 760, 980]}
        sizes="(max-width: 64rem) 100vw, 42vw"
        loading="eager"
        decoding="async"
      />
    </figure>
  </div>
</section>

<style>
  .hero-section {
    padding-bottom: var(--space-5);
    padding-top: var(--space-7);
  }

  .hero-grid {
    align-items: start;
    display: grid;
    gap: var(--space-6);
    grid-template-columns: 1.2fr 1fr;
  }

  .hero-copy {
    display: grid;
    gap: var(--space-4);
    max-width: 62ch;
  }

  .hero-title {
    font-size: clamp(2.4rem, 5vw, 4rem);
    line-height: 1.06;
    margin: 0;
  }

  .hero-intro {
    color: var(--color-muted);
    font-size: clamp(1.08rem, 2.1vw, 1.38rem);
    max-width: 44ch;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-top: var(--space-1);
  }

  .hero-link {
    align-items: center;
    border: 1px solid var(--color-border);
    border-radius: 999px;
    color: var(--color-heading);
    display: inline-flex;
    font-weight: 600;
    padding: 0.6rem 1rem;
    text-decoration: none;
  }

  .hero-link:hover {
    border-color: var(--color-heading);
  }

  .hero-link-primary {
    background: var(--color-sandy-brown);
    border-color: var(--color-sandy-brown);
    color: var(--color-off-white);
  }

  .hero-link-primary:hover {
    background: #db863d;
    border-color: #db863d;
  }

  .hero-image {
    margin: 0;
  }

  .hero-image :global(img) {
    border-radius: 0.5rem;
    display: block;
    height: 100%;
    max-height: 34rem;
    object-fit: cover;
    width: 100%;
  }

  @media (max-width: 64rem) {
    .hero-grid {
      grid-template-columns: 1fr;
    }

    .hero-image :global(img) {
      max-height: 28rem;
    }
  }
</style>
