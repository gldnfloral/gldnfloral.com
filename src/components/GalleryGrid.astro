---
import { Image } from "astro:assets";

import type { GalleryEntry } from "../lib/gallery";

interface Props {
  items: readonly GalleryEntry[];
  showCaptions?: boolean;
}

const { items, showCaptions = true } = Astro.props;
---

<div class="gallery-grid">
  {
    items.map((item) => (
      <figure class="gallery-item">
        <Image
          src={item.image}
          alt={item.alt}
          class="gallery-image"
          widths={[480, 720, 960]}
          sizes="(max-width: 48rem) 100vw, (max-width: 72rem) 50vw, 33vw"
          loading="lazy"
          decoding="async"
        />
        {
          showCaptions && (
            <figcaption>
              <h3>{item.title}</h3>
            </figcaption>
          )
        }
      </figure>
    ))
  }
</div>

<style>
  .gallery-grid {
    display: grid;
    gap: var(--space-5);
    grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
  }

  .gallery-item {
    display: grid;
    gap: var(--space-3);
    margin: 0;
  }

  .gallery-image {
    aspect-ratio: 4 / 5;
    border-radius: 0.5rem;
    display: block;
    height: 100%;
    object-fit: cover;
    width: 100%;
  }

  h3 {
    color: var(--color-heading);
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 2vw, 1.6rem);
    font-weight: 500;
    line-height: 1.15;
    margin: 0;
  }
</style>
