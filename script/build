#!/usr/bin/env bash
set -euo pipefail

if ! command -v npm >/dev/null 2>&1; then
  echo "npm is required to build the Astro app." >&2
  echo "Install Node.js (nodenv) then run: npm install" >&2
  exit 1
fi

if [ ! -d "node_modules" ]; then
  echo "Missing node_modules. Run: npm install" >&2
  exit 1
fi

npm run build
